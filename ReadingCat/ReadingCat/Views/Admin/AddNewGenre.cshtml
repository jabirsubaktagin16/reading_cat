@model ReadingCat.Models.Tags
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>BookDetails</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        .footercontainer {
            display: none;
        }

        .box {
            background-color: white;
            padding: 20px;
            box-shadow: 5px 10px 8px 10px #c7c7c7;
            width: 600px;
            height: 300px;
            margin: 10px auto;
            padding-right: 200px;
            font-family: DejaVu Sans Mono, monospace;
            margin-top: 200px;
        }

        .body {
            background-image: url(catpattern.png);
            background-size: cover;
        }
    </style>
</head>
<body>
    @Html.Raw(TempData["tag"]);
    <div class="box">
        <div class="row" style="margin-top:80px;">
            <div class="col-md-12" style="font-size : 15px;">
                <div class="input-group">
                    @using (Html.BeginForm("AddNewGenre", "Admin", FormMethod.Post))
                    {
                        <div class="col-md-6" style="font-family : Arial;">
                            <div class="input-group">

                                @Html.EditorFor(model => model.tagName, new { htmlAttributes = new { @class = "input--style-4", @style = "width:1000px;border-style:double; height: 50px; margin-left : 10px;", @placeholder = "add new tag" } })

                                @Html.ValidationMessageFor(model => model.tagName, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="col-md-12" style="font-size : 15px; font-family : Arial;">
                            <button type="submit" value="Submit" class="btn btn-primary" id="submit" name="submit" style="width:100px; height: 50px; margin-left: 200px; margin-top: 20px; ">Add Tag</button>
                        </div>}

                </div>
            </div>

        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.js"></script>
</body>
</html>
